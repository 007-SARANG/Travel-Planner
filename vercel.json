{
    "version": 2,
    "builds": [
        {
            "src": "app.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/app.py"
        }
    ],
    "env": {
        "GOOGLE_API_KEY": "@google-api-key",
        "AMADEUS_CLIENT_ID": "@amadeus-client-id",
        "AMADEUS_CLIENT_SECRET": "@amadeus-client-secret",
        "OPENWEATHER_API_KEY": "@openweather-api-key"
    }
}
